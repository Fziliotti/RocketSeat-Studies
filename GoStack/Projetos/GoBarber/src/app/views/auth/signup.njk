{% extends "_layouts/auth.njk" %}

{% block body %}
  <form action="/signup" method="post" enctype="multipart/form-data">
     {% include "_partials/flash.njk" %}

    <label for="avatar">
      <img src="/images/avatar.svg" alt="avatar">
    </label>

    <input id="avatar" type="file" name="avatar"/>
    <input type="text" name="name" placeholder="Nome Completo"/>
    <input type="email" name="email" placeholder="Seu e-mail"/>
    <input type="password" name="password" placeholder="Senha secreta">

    <label for="provider">
      <input type="checkbox" id="provider" name="provider">
      Sou cabeleleiro
    </label>

    <button type="submit">Criar conta</button>

    <a href="/">JÃ¡ possuo conta</a>
  </form>

  <script type="text/javascript">
    const avatarInput = document.getElementById('avatar')
    const image = document.querySelector('label[for=avatar] img')

    avatarInput.onchange = (e) =>{
      image.classList.add('preview')
      image.src = URL.createObjectURL(e.target.files[0])
    }

  </script>


{% endblock %}
